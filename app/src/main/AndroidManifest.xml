<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qamp.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
        android:name="com.qamp.app.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_o"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="GOOGLE_MAP_KEY" />


        <activity
            android:name="com.qamp.app.EditProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".OnBoardingScreens"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".OnBoardingUserProfile"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name="com.qamp.app.ShowProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WelcomeOnboarding"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".LoginQampActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/FACEBOOK_APP_ID" />


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.qamp.app.AppSettings.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <receiver
            android:name="com.qamp.app.AutoStart"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
                <action android:name="com.qamp.app.restart"></action>
            </intent-filter>
        </receiver>

        <!-- Firebase Notifications-->
        <service
            android:name="com.qamp.app.fcm.MesiboGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name="com.qamp.app.fcm.MesiboInstanceIDListenerService"
            android:exported="false">

            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name="com.qamp.app.fcm.MesiboRegistrationIntentService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name="com.qamp.app.fcm.MesiboJobIntentService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name="com.qamp.app.uihelper.ProductTourActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qamp.app.uihelper.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qamp.app.uihelper.LoginActivityNew"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qamp.app.messaging.MesiboUserListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qamp.app.messaging.MesiboEndToEndEncryptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qamp.app.messaging.MesiboMessagingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qamp.app.messaging.MesiboMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qamp.app.messaging.CreateNewGroupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qamp.app.messaging.MesiboUserListActivityNew"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowProfileActivityNew"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditProfileActivityNew"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectLanguage"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AddChannel.AddChannelActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".Community.CommunityDashboard"
            android:screenOrientation="portrait" />

    </application>

</manifest>
