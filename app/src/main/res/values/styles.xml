<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Huddle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
         <!-- Customize your theme here. -->
    </style>

    <style name="Qamp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textAlignment">gravity</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="Theme.Material" parent="Theme.MaterialComponents" />
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">#828282</item>
    </style>
    <style name="TabTheme">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="tabTextColor">#272A3D</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_rounded_corners</item>
    </style>

    <style name="Theme.Huddle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="Theme.Huddle.NoTitleBar">
        <item name="windowNoTitle">false</item>
    </style>


    <style name="Theme.Huddle.NoActionBarGreyTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#F7F7F7</item>
        <item name="colorPrimaryDark">#F7F7F7</item>
        <item name="colorAccent">#F7F7F7</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- specify enter and exit transitions -->
    </style>

    <style name="Theme.Huddle.AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Huddle.GreyTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F7F7F7</item>
        <item name="colorPrimaryDark">#F7F7F7</item>
        <item name="colorAccent">#F7F7F7</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">12sp</item>
        <!-- Query Text Color -->
        <item name="colorControlActivated">@android:color/black</item>

        <item name="android:textColorPrimary">@color/text_color_subtitle</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/text_color_subtitle</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/text_color_subtitle</item>
     </style>



    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        ...
        <item name="colorAccent">@color/text_color17</item>
    </style>

    <style name="Theme.Huddle.SplashTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E0E0E0</item>
        <item name="colorPrimaryDark">#E0E0E0</item>
        <item name="colorAccent">#E0E0E0</item>
    </style>

    <style name="Theme.Huddle.LoginTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E0E0E0</item>
        <item name="colorPrimaryDark">#E0E0E0</item>
        <item name="colorAccent">#E0E0E0</item>

    </style>

    <style name="DialogTheme1" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
     </style>
</resources>