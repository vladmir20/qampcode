<resources>

    <style name="Qamp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="btn_text_style">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="background">@drawable/four_rounded_corner_btn</item>
    </style>

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>

    <style name="diable_btn">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/hint_color_new</item>
        <item name="background">@drawable/four_rounded_corner_btn</item>
        <item name="backgroundTint">@color/diable_btn</item>
    </style>

    <style name="medium_text_style">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_new</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <!-- Define the text color for the normal state (unselected) -->
        <item name="android:textColor">@color/buttonActiveText</item>
        <!-- Define the text color for the selected state -->
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/buttonActiveText</item>
    </style>

    <style name="SelectedTextColor">
        <item name="android:textColor">@color/buttonActiveText</item>
    </style>

    <style name="medium_text_style_heading">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_new</item>
    </style>

    <style name="onBoarding_heading_text_style">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_new</item>
    </style>


    <style name="onBoarding_description_text_style">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_new</item>
    </style>

    <style name="edit_Text_Style" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_new</item>
        <item name="android:textColorHint">@color/hint_color_new</item>
    </style>

    <style name="btn_disable_login">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="backgroundColor">@color/colorPrimaryLight</item>
    </style>

    <style name="disable_btn_text">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="login_btn_disable">
        <item name="background">@color/colorPrimaryLight</item>
    </style>

    <style name="footer_text_white">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="footer_text_primary">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.Material" parent="Theme.MaterialComponents" />

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">#828282</item>
    </style>

    <style name="rounded_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Adjust cornerSize as needed -->
    </style>

</resources>