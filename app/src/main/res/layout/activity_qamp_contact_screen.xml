<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_tint4"
    tools:context=".Activity.QampContactScreen">

    <LinearLayout

        android:id="@+id/contactLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_tint4"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/imageView53"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginTop="6sp"
                app:srcCompat="@drawable/ic_arrow_left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView53"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingLeft="8sp"
                    android:paddingTop="2dp"
                    android:text="@string/start_your_conversation"
                    android:textColor="@color/text_color_black_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/selectedContacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:paddingLeft="8sp"
                    android:text="TextView"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView54"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6sp"
                app:srcCompat="@drawable/ic_more_option_verical" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/background_tintTaskBar"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:src="@drawable/ic_search"
                app:tint="#828282" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="297dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="1dp"
                android:layout_toStartOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView2"
                android:background="@color/transparent_color"
                android:ems="10"
                android:gravity="center|left"
                android:hint="@string/search_by_name_contact_number"
                android:inputType="textPersonName"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/text_color_subtitle"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:gravity="center|left"
                android:src="@drawable/ic_microphone"
                app:tint="#828282" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/create_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:drawableLeft="@drawable/create_group"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="left"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/create_a_group"
                android:textColor="@color/text_color_black_white"
                android:textSize="15sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/next_group"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:visibility="gone"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:src="@drawable/arrow_right_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/create_qamp_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawableLeft="@drawable/qamp_room"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/create_qamp_room"
            android:textColor="@color/text_color_black_white"
            android:textSize="15sp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/my_contacts_on_qamp"
                android:textColor="@color/text_color_black_white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/clearSelectionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="Clear Selection"
                android:textColor="@color/text_color_subtitle"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView

            android:id="@+id/emptyview_tex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/not_have_qamp_contact"
            android:textColor="@color/md_grey_500"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>