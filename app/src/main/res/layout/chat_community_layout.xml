<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/requestingImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/sankalpdemo"
        app:civ_border_color="@color/green_400"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/requestingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Sankalp Goel"
        android:textSize="16sp"
        android:textColor="@color/text_color17"
        app:layout_constraintStart_toEndOf="@+id/requestingImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/requestingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="We've to focus on launching the application soon"
        android:textColor="#828282"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/requestingImage"
        app:layout_constraintTop_toBottomOf="@+id/requestingTitle" />

    <TextView
        android:id="@+id/timingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="22 M"
        android:textColor="#828282"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bellIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="15dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="3dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timingText">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_color17"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="@+id/requestingImage"
        app:layout_constraintStart_toStartOf="@+id/requestingImage"
        app:layout_constraintTop_toTopOf="@+id/requestingImage"
        app:srcCompat="@drawable/circle_green" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="#F2F2F2"
        app:layout_constraintEnd_toEndOf="@+id/bellIcon"
        app:layout_constraintStart_toStartOf="@+id/requestingDescription"
        app:layout_constraintTop_toBottomOf="@+id/requestingDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>