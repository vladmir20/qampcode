<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/cancel_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_close" />

            <TextView
                android:id="@+id/channelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:hint="Channel Name"
                android:textColor="@color/text_color17"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="78dp"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:background="#F4B63F" />

            <View
                android:id="@+id/view6"
                android:layout_width="78dp"
                android:layout_height="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="#F4B63F" />

            <View
                android:id="@+id/view7"
                android:layout_width="78dp"
                android:layout_height="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="#F4B63F" />

            <View
                android:id="@+id/view8"
                android:layout_width="78dp"
                android:layout_height="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="#F4B63F" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Invite people to join your community."
            android:textColor="@color/text_color17"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="453dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="16dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/corner_radius_button_orange"
                android:text="Share Invite " />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/orange_border"
                android:text="Invite All"
                android:textColor="#F4B63F" />
        </LinearLayout>

        <Button
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="167dp"
            android:layout_marginRight="167dp"
            android:layout_weight="1"
            android:background="@color/transparent_color"
            android:paddingTop="10dp"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="@color/text_color17"
            android:textSize="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>