<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/requestingImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/demo_shivam"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/requestingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Shivam"
            android:textColor="@color/text_color17"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/requestingImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/requestingDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Shivam has requested to join"
            android:textColor="#B7B7B7"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/requestingImage"
            app:layout_constraintTop_toBottomOf="@+id/requestingTitle" />

        <TextView
            android:id="@+id/timingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="10 M"
            android:textColor="#828282"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bellIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timingText"
            app:srcCompat="@drawable/bell_filled" />

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/corner_radius_button"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/requestingImage"
            app:layout_constraintTop_toBottomOf="@+id/requestingDescription">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Accept"
                android:textColor="@color/text_color17"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/declineButton"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/decline_button_outline"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/acceptButton"
            app:layout_constraintTop_toBottomOf="@+id/requestingDescription">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Decline"
                android:textColor="#EC6969"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/viewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="View Profile"
            android:textColor="#828282"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/declineButton"
            app:layout_constraintTop_toBottomOf="@+id/requestingDescription" />

        <View
            android:id="@+id/view33"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#f2f2f2"
            app:layout_constraintEnd_toEndOf="@+id/timingText"
            app:layout_constraintStart_toStartOf="@+id/requestingDescription"
            app:layout_constraintTop_toBottomOf="@+id/viewDetails" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>