<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mes_rv_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="5dp"
        android:padding="5dp"
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:gravity="left"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/isChecked"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:theme="@style/checkBoxStyle"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/mes_rv_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"

            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/sub_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mes_rv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:lineHeight="24dp"
                android:text="@string/qamp_username"
                android:textColor="@color/text_color13"
                android:textFontWeight="600"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mes_rv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:lineHeight="16px"
                android:text="@string/phone_number"
                android:textColor="@color/text_color_subtitle"
                android:textFontWeight="400"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/icon_sub_container"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <!--            <LinearLayout-->
            <!--                android:orientation="vertical"-->
            <!--                android:id="@+id/link"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="24dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_marginRight="15dp"-->
            <!--                android:scaleType="centerCrop"-->
            <!--                android:background="@drawable/corner_radius_button"-->
            <!--                android:visibility="visible">-->
            <TextView
                android:visibility="gone"
                android:id="@+id/link"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="10sp"
                android:textColor="@color/text_color17"
                android:padding="10dp"
                android:background="@drawable/corner_radius_button"
                android:layout_width="50dp"
                android:text="@string/invite_only"
                android:layout_height="30dp"/>


            <ImageView
                android:id="@+id/message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_message"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                card_view:srcCompat="@drawable/ic_message"
                tools:srcCompat="@drawable/ic_message"
                card_view:tint="@color/black" />

            <ImageView
                android:id="@+id/video_call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_video_camera"
                android:visibility="gone"
                card_view:srcCompat="@drawable/ic_video_camera"
                tools:srcCompat="@drawable/ic_video_camera" />

            <ImageView
                android:id="@+id/audio_call"
                android:layout_marginLeft="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_phone"
                android:visibility="gone"
                card_view:srcCompat="@drawable/ic_phone"
                tools:srcCompat="@drawable/ic_phone" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_5" />


    <RelativeLayout
        android:id="@+id/highlighted_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/top_layout"
        android:layout_alignBottom="@+id/top_layout"
        android:background="#10000000"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_check_circle_black_24dp"
            card_view:tint="@color/md_teal_700" />


    </RelativeLayout>

</LinearLayout>
