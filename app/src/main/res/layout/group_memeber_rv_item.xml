<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nu_rv_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/nu_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/nu_rv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:id="@+id/name_address_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mes_rv_date"
            android:layout_alignTop="@id/nu_rv_profile"
            android:layout_toRightOf="@+id/nu_rv_profile"
            android:weightSum="1"
            >

            <TextView
                android:id="@+id/nu_rv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="User Name"
                android:textColor="#505050"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/nu_delete_btn"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/md_grey_700" />
        </LinearLayout>

        <com.mesibo.emojiview.EmojiconTextView
            android:id="@+id/nu_memeber_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_address_layout"
            android:layout_alignStart="@+id/name_address_layout"
            android:layout_alignLeft="@+id/name_address_layout"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:maxLines="2"
            android:text="longer message is longer message is another longer message to make it haappen"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#868686"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>

