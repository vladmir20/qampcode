<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:textAlignment="textEnd">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/md_white_1000"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">


                </LinearLayout>

                <TextView
                    android:id="@+id/emptyview_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="You do not have contacts to show instead add contacts from new contacts list"
                    android:textColor="@color/md_grey_500"
                    android:textSize="20sp"
                    android:textStyle="italic" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchChats"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_radius_button"
                        android:backgroundTint="@color/grey_40"
                        android:visibility="gone" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MY CHANNELS"
                        android:layout_marginLeft="24dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/text_color17"/>


                    <LinearLayout
                        android:id="@+id/horizontal_channel_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <androidx.cardview.widget.CardView
                            android:layout_width="51dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="24sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="2dp"
                            app:cardBackgroundColor="@color/background_tint11"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="3dp">

                            <LinearLayout
                                android:id="@+id/add_channel"
                                android:layout_width="51dp"
                                android:layout_height="60dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView32"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:srcCompat="@drawable/ic_plus" />

                                <TextView
                                    android:id="@+id/textView43"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="7dp"
                                    android:gravity="center"
                                    android:text="@string/add_channel"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color17"
                                    android:textSize="7sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/myChannelRecycler"
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" />


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/message_contact_frag_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@color/white" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bottom_forward_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/forward_to_contacts"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_action_forward" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/corner_radius_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/chat_feed_icons" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/new_chat"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>