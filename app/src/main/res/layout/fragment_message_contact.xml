<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:textAlignment="textEnd">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/md_white_1000"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/emptyview_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="You do not have contacts to show instead add contacts from new contacts list"
                    android:textColor="@color/md_grey_500"
                    android:textSize="20sp"
                    android:textStyle="italic" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchChats"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_radius_button"
                        android:backgroundTint="@color/grey_40"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="51dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:elevation="2dp"
                            android:translationZ="6dp"
                            app:cardBackgroundColor="@color/background_tint11"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:id="@+id/add_channel"
                                android:layout_width="51dp"
                                android:layout_height="60dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView32"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    app:srcCompat="@drawable/ic_plus" />

                                <TextView
                                    android:id="@+id/textView43"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="7dp"
                                    android:gravity="center"
                                    android:text="@string/add_channel"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color17"
                                    android:textSize="7dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/hscrollview_container"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="4dp"
                                    android:translationZ="6dp"
                                    app:cardBackgroundColor="@color/background_tint11"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@color/grey_5"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:padding="5dp"
                                                android:src="@drawable/photo_male" />

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="match_parent" />

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/textView20"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="4dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:text="4M"
                                                    android:textColor="@color/text_color_subtitle"
                                                    android:textSize="10sp"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent" />

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="16dp"
                                                    android:layout_marginTop="8dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:layout_marginBottom="16dp"
                                                    android:background="@drawable/attachment_button_background"
                                                    android:gravity="center"
                                                    android:orientation="vertical"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintStart_toStartOf="@+id/textView20"
                                                    app:layout_constraintTop_toBottomOf="@+id/textView20">

                                                    <TextView
                                                        android:layout_width="20dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_marginBottom="2dp"
                                                        android:gravity="center"
                                                        android:text="8"
                                                        android:textColor="@color/text_color17"
                                                        android:textSize="10sp" />
                                                </LinearLayout>
                                            </androidx.constraintlayout.widget.ConstraintLayout>


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:background="@color/white"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="05dp"
                                                android:text="Karan Walia"
                                                android:textColor="@color/text_color_black_white"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="4dp"
                                    android:translationZ="6dp"
                                    app:cardBackgroundColor="@color/background_tint11"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@color/grey_5"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:padding="5dp"
                                                android:src="@drawable/illustration" />

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="match_parent" />

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/textView24"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="4dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:text="4M"
                                                    android:textColor="@color/text_color_subtitle"
                                                    android:textSize="10sp"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent" />

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="16dp"
                                                    android:layout_marginTop="8dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:layout_marginBottom="16dp"
                                                    android:background="@drawable/attachment_button_background"
                                                    android:gravity="center"
                                                    android:orientation="vertical"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintStart_toStartOf="@+id/textView24"
                                                    app:layout_constraintTop_toBottomOf="@+id/textView24">

                                                    <TextView
                                                        android:layout_width="20dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_marginBottom="2dp"
                                                        android:gravity="center"
                                                        android:text="8"
                                                        android:textColor="@color/text_color17"
                                                        android:textSize="10sp" />
                                                </LinearLayout>
                                            </androidx.constraintlayout.widget.ConstraintLayout>


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:background="@color/white"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="05dp"
                                                android:text="Art Design"
                                                android:textColor="@color/text_color_black_white"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="4dp"
                                    android:translationZ="6dp"
                                    app:cardBackgroundColor="@color/background_tint11"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@color/grey_5"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:padding="5dp"
                                                android:src="@drawable/ic_logo_gradient" />

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="match_parent" />

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/textView26"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="4dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:text="4M"
                                                    android:textColor="@color/text_color_subtitle"
                                                    android:textSize="10sp"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent" />

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="16dp"
                                                    android:layout_marginTop="8dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:layout_marginBottom="16dp"
                                                    android:background="@drawable/attachment_button_background"
                                                    android:gravity="center"
                                                    android:orientation="vertical"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintStart_toStartOf="@+id/textView26"
                                                    app:layout_constraintTop_toBottomOf="@+id/textView26">

                                                    <TextView
                                                        android:layout_width="20dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_marginBottom="2dp"
                                                        android:gravity="center"
                                                        android:text="8"
                                                        android:textColor="@color/text_color17"
                                                        android:textSize="10sp" />
                                                </LinearLayout>
                                            </androidx.constraintlayout.widget.ConstraintLayout>


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:background="@color/white"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="05dp"
                                                android:text="Qamp Dev"
                                                android:textColor="@color/text_color_black_white"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:elevation="4dp"
                                    android:translationZ="6dp"
                                    app:cardBackgroundColor="@color/background_tint11"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@color/grey_5"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:padding="5dp"
                                                android:src="@drawable/ic_logo_gradient" />

                                            <View
                                                android:layout_width="15dp"
                                                android:layout_height="match_parent" />

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/textView22"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="4dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:text="4M"
                                                    android:textColor="@color/text_color_subtitle"
                                                    android:textSize="10sp"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent" />

                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="16dp"
                                                    android:layout_marginTop="8dp"
                                                    android:layout_marginEnd="8dp"
                                                    android:layout_marginBottom="16dp"
                                                    android:background="@drawable/attachment_button_background"
                                                    android:gravity="center"
                                                    android:orientation="vertical"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintStart_toStartOf="@+id/textView22"
                                                    app:layout_constraintTop_toBottomOf="@+id/textView22">

                                                    <TextView
                                                        android:layout_width="20dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_marginBottom="2dp"
                                                        android:gravity="center"
                                                        android:text="8"
                                                        android:textColor="@color/text_color17"
                                                        android:textSize="10sp" />
                                                </LinearLayout>
                                            </androidx.constraintlayout.widget.ConstraintLayout>


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:background="@color/white"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="05dp"
                                                android:text="Thotnr Dev"
                                                android:textColor="@color/text_color_black_white"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/message_contact_frag_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/md_white_1000" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bottom_forward_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/forward_to_contacts"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_action_forward" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/corner_radius_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/chat_feed_icons" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/new_chat"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>