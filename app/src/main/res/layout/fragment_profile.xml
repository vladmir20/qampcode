<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_new_profile_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pictureViewContainer11"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_profile_view"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/cameraIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="1dp"
                        android:src="@mipmap/camera_light_filled"
                        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
                        app:layout_constraintEnd_toEndOf="@+id/circleImageView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/circleImageView"
                        card:layout_constraintBottom_toBottomOf="@+id/circleImageView"
                        card:layout_constraintEnd_toEndOf="parent"
                        card:layout_constraintStart_toStartOf="parent"
                        card:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/cameraText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:lineHeight="14sp"
                        android:text="@string/onboarding_profile_camera_text"
                        android:textAlignment="center"
                        android:textColor="@color/text_color17"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cameraIcon"
                        card:layout_constraintEnd_toEndOf="parent"
                        card:layout_constraintStart_toStartOf="parent"
                        card:layout_constraintTop_toBottomOf="@+id/cameraIcon" />

                    <LinearLayout
                        android:id="@+id/editPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_camera_view"
                        android:gravity="center"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        card:layout_constraintBottom_toBottomOf="parent"
                        card:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/edit_user_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:elevation="1dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/camera_light_filled" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/name_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card:cardCornerRadius="0dp"
                    card:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black_white_2"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:text="@string/name_text"
                                android:textColor="@color/text_color_black_white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/edit1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="11dp"
                                android:src="@drawable/ic_edit" />
                        </RelativeLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/self_user_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical"
                            android:minHeight="30dp">

                            <com.mesibo.emojiview.EmojiconEditText
                                android:id="@+id/name_emoji_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@color/black_white_2"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="@string/enter_your_name"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/text_color_subtitle"
                                android:textColorHint="@color/text_color15"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="14sp"
                                card:layout_constraintBottom_toBottomOf="parent"
                                card:layout_constraintEnd_toEndOf="parent"
                                card:layout_constraintStart_toStartOf="parent"
                                card:layout_constraintTop_toTopOf="parent" />

                            <!--                            <TextView-->
                            <!--                                android:id="@+id/name_char_counter"-->
                            <!--                                android:layout_width="30dp"-->
                            <!--                                android:layout_height="30dp"-->
                            <!--                                android:text="99"-->
                            <!--                                android:textSize="12sp"-->
                            <!--                                android:layout_margin="5dp"-->
                            <!--                                android:layout_centerVertical="true"-->
                            <!--                                android:layout_gravity="center_vertical"-->
                            <!--                                android:gravity="center"-->
                            <!--                                android:layout_alignParentLeft="true"-->
                            <!--                                android:fontFamily="@font/montserrat_regular"-->
                            <!--                                android:textColor="@color/orange_color"-->

                            <!--                                />-->

                            <!--                            <ImageView-->
                            <!--                                android:id="@+id/name_emoji_btn"-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:src="@drawable/ic_sentiment_satisfied_black_24dp"-->
                            <!--                                android:tint="@color/orange_color"-->
                            <!--                                android:layout_alignParentRight="true"-->
                            <!--                                android:layout_centerVertical="true"-->
                            <!--                                android:layout_margin="5dp"-->


                            <!--                                />-->

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/status_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    card:cardCornerRadius="0dp"
                    card:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_white_2"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:paddingBottom="10dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:text="@string/about_text"
                                android:textColor="@color/text_color_black_white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/edit2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_edit" />
                        </RelativeLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/self_user_status_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="-5dp"
                            android:background="@color/black_white_2"
                            android:gravity="center_vertical"
                            android:minHeight="30dp">


                            <com.mesibo.emojiview.EmojiconEditText
                                android:id="@+id/status_emoji_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:background="@color/black_white_2"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="@string/type_status_text"
                                android:minHeight="40dp"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:singleLine="true"
                                android:supportsRtl="false"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_color_subtitle"
                                android:textColorHint="@color/text_color15"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textDirection="locale"
                                android:textSize="14sp"
                                card:layout_constraintBottom_toBottomOf="parent"
                                card:layout_constraintEnd_toEndOf="parent"
                                card:layout_constraintStart_toStartOf="parent"
                                card:layout_constraintTop_toTopOf="parent"
                                tools:ignore="RtlCompat" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="20dp"
                            android:background="#d1d1d1">

                        </View>

                        <RelativeLayout
                            android:layout_marginTop="-05dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/profile_phone_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:text="@string/contact_number"
                                android:textColor="@color/text_color_black_white"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/edit3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_edit"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <com.mesibo.emojiview.EmojiconEditText
                            android:id="@+id/profile_self_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@color/transparent_color"
                            android:editable="false"
                            android:focusable="false"
                            android:fontFamily="@font/inter_regular"
                            android:maxLines="1"
                            android:text="@string/examlpe_number"
                            android:textColor="@color/text_color_subtitle"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:background="#d1d1d1" />

                        <RelativeLayout
                            android:layout_marginTop="-5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:text="@string/email_text"
                                android:textColor="@color/text_color_black_white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/edit4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_edit" />
                        </RelativeLayout>

                        <com.mesibo.emojiview.EmojiconEditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="@color/black_white_2"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="left"
                            android:hint="@string/email_address"
                            android:minHeight="40dp"
                            android:paddingTop="7dp"
                            android:textColor="@color/text_color_subtitle"
                            android:textColorHint="@color/text_color15"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="20dp"
                            android:background="#d1d1d1">

                        </View>

                        <RelativeLayout
                            android:layout_marginTop="-5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/current_Language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:maxLines="1"
                                android:text="@string/change_app_lang"
                                android:textColor="@color/text_color_black_white"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/edit_lang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_edit" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/current_Lang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_medium"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/text_color15"
                            android:textSize="12sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/prev_profile_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_white_2"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:paddingBottom="10dp">



                        <TextView
                            android:id="@+id/previousProfiles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="@string/profile_pictures"
                            android:textColor="@color/text_color_black_white"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:orientation="vertical">

                            <GridView
                                android:id="@+id/profile_pic_grid"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="5dp"
                                android:numColumns="8" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

